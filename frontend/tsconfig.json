{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",               // <-- Required for paths to work
    "paths": {
      "@/*": ["src/*"]            // @/something => src/something
    },
  },
  "include": [
    "app",
    "src",
    "app",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
